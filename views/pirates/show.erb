<h1>Pirates</h1></br>
<div class="pirate">
  <p>Name: <%= @pirate.name %></p></br>
	<p>Weight: <%= @pirate.weight %></p></br>
	<p>Height: <%= @pirate.height %></p></br>
  </div></br>

  <h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Topic: <%= ship.type %></p><br>
    <p>Topic: <%= ship.booty %></p><br>
  </div><br>
<% end %>
